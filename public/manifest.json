{
    "manifest_version": 3,
    "name": "Nano Tutor",
    "version": "1.0",
    "description": "Learn and understand any webpage using on-device AI (Gemini Nano).",
    "permissions": ["contextMenus", "activeTab", "storage"],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Nano Tutor"
    },
    "icons": {
        "16": "icons/icon.png",
        "48": "icons/icon.png",
        "128": "icons/icon.png"
    }
}
  